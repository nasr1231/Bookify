@model AuthorFormViewModel
@{
    ViewData["Title"] = $"{(Model?.Id > 0 ? "Edit" : "Add")} Author";
}

<form asp-action="@(Model?.Id > 0 ? "Edit" : "Create")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="OnModalBegin"
      data-ajax-success="OnModalSuccess"
      data-ajax-failure="ShowErrorMessage"
      data-ajax-complete="OnModalComplete"
>
    @if (Model?.Id > 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="d-flex flex-column mb-8 fv-row fv-plugins-icon-container">
        <label class="d-flex align-items-center fs-6 fw-bold mb-2"><span class="required">Author Name</span></label>
        <input type="text" asp-for="Name" class="form-control form-control-solid" placeholder="Enter Author Name">
        <span asp-validation-for="@Model!.Name" class="text-danger d-block h-10px"></span>
    </div>
    <div class="d-flex flex-column mb-8" id="container">
        <label class="d-flex align-items-center fs-6 fw-bold mb-2">
            <span class="required">Author Nationality</span>
        </label>
        <select class="form-select" id="mySelect" asp-for="Nationality">
            <partial name="_NationalitiesList" />
        </select>
        <span asp-validation-for="@Model!.Nationality" class="text-danger d-block h-10px"></span>
    </div>
    <div class="d-flex flex-column mb-8">
        <label class="fs-6 fw-bold mb-2">Author Brief</label>
        <textarea asp-for="Brief" class="form-control form-control-solid" id="disabled-form" placeholder="Enter Author Brief"></textarea>
        <span asp-validation-for="@Model!.Brief" class="text-danger d-block h-10px"></span>
    </div>
    <partial name="_ModalFooter" />
</form>

@section Scripts{
    <script src="~/js/author.js" asp-append-version="true"></script>
}    
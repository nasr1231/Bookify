@model BookFormViewModel

@{
    ViewData["Title"] = "Book Form";
}

<div class="card shadow-sm category-header shadow">
    <div class="card-header">
        <h3 class="card-title fw-bolder fs-1">
            <div class="symbol symbol-35px me-3">
                <div class="symbol-label fs-2 fw-semibold bg-light text-inverse-primary">
                    <span class="svg-icon svg-icon-2x svg-icon-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                        </svg>
                    </span>
                </div>
            </div>
            @(Model.Id.Equals(0) ? "Add" : "Edit") Books
        </h3>
    </div>
</div>

<div class="card-body flex-row">
    <div class="table-responsive">
        <form method="post"   class="overflow-hidden" asp-controller="Books" enctype="multipart/form-data" id="Form">
            @if (Model.Id > 0)
            {
                <input type="hidden" asp-for="Id" />
            }
            <div class="mb-7">
                <div class="image-input image-input-empty my-7 ms-5" data-kt-image-input="true" style="background-image: url('/images/@(string.IsNullOrEmpty(Model.ImageUrl) ? "image-placeholder.jpg" : $"/books/{Model.ImageUrl}")');">

                    <div class="image-input-wrapper w-150px h-200px"></div>

                    <label class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-30px bg-body shadow"
                           data-kt-image-input-action="change"
                           data-bs-dismiss="click">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path opacity="0.3" d="M21.4 8.35303L19.241 10.511L13.485 4.755L15.643 2.59595C16.0248 2.21423 16.5426 1.99988 17.0825 1.99988C17.6224 1.99988 18.1402 2.21423 18.522 2.59595L21.4 5.474C21.7817 5.85581 21.9962 6.37355 21.9962 6.91345C21.9962 7.45335 21.7817 7.97122 21.4 8.35303ZM3.68699 21.932L9.88699 19.865L4.13099 14.109L2.06399 20.309C1.98815 20.5354 1.97703 20.7787 2.03189 21.0111C2.08674 21.2436 2.2054 21.4561 2.37449 21.6248C2.54359 21.7934 2.75641 21.9115 2.989 21.9658C3.22158 22.0201 3.4647 22.0084 3.69099 21.932H3.68699Z" fill="currentColor" />
                            <path d="M5.574 21.3L3.692 21.928C3.46591 22.0032 3.22334 22.0141 2.99144 21.9594C2.75954 21.9046 2.54744 21.7864 2.3789 21.6179C2.21036 21.4495 2.09202 21.2375 2.03711 21.0056C1.9822 20.7737 1.99289 20.5312 2.06799 20.3051L2.696 18.422L5.574 21.3ZM4.13499 14.105L9.891 19.861L19.245 10.507L13.489 4.75098L4.13499 14.105Z" fill="currentColor" />
                        </svg>

                        <input type="file" asp-for="Image" accept=".png, .jpg, .jpeg" />
                        <input type="hidden" name="avatar_remove" />
                        <span asp-validation-for="@Model.Image" class="text-danger d-block"></span>
                    </label>
                    <span class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-30px bg-body shadow"
                          data-kt-image-input-action="cancel"
                          data-bs-dismiss="click">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path opacity="0.3" d="M6.7 19.4L5.3 18C4.9 17.6 4.9 17 5.3 16.6L16.6 5.3C17 4.9 17.6 4.9 18 5.3L19.4 6.7C19.8 7.1 19.8 7.7 19.4 8.1L8.1 19.4C7.8 19.8 7.1 19.8 6.7 19.4Z" fill="currentColor" />
                            <path d="M19.5 18L18.1 19.4C17.7 19.8 17.1 19.8 16.7 19.4L5.40001 8.1C5.00001 7.7 5.00001 7.1 5.40001 6.7L6.80001 5.3C7.20001 4.9 7.80001 4.9 8.20001 5.3L19.5 16.6C19.9 16.9 19.9 17.6 19.5 18Z" fill="currentColor" />
                        </svg>
                    </span>
                    <span class="btn btn-icon btn-circle btn-color-muted btn-active-color-primary w-25px h-30px bg-body shadow"
                          data-kt-image-input-action="remove"
                          data-bs-dismiss="click">
                        <i class="ki-outline ki-cross fs-3"></i>
                    </span>
                    <!--end::Remove button-->
                </div>
                <div class="form-text">Allowed Files Types: PNG, JPG, JPEG Only, and Cannot be more than 2MB.</div>
            </div>
            
            <div class="row">
                <div class="col-md-5">
                    <div class="row">
                        <div class="col">
                            <!--begin::Input group-->
                            <div class="form-floating mb-5">
                                <input type="text" class="form-control form-control-solid" placeholder="Title" asp-for="Title" />
                                <label asp-for="Title"></label>                                
                            </div>                            
                            <span asp-validation-for="@Model.Title" class="text-danger d-block"></span>
                        </div>
                    </div>  
                    <div class="row">
                        <div class="col">
                            <div class="form-floating mb-5">
                                <input type="text" class="form-control form-control-solid" placeholder="Title" asp-for="Pages" />
                                <label asp-for="Pages"></label>                                
                            </div>                            
                            <span asp-validation-for="@Model.Pages" class="text-danger d-block"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-floating mb-5">
                                <select class="form-select form-select-solid js-select2" data-placeholder="Select An Author" asp-for="@Model.AuthorId" asp-items="@Model.Authors">
                                    <option value="">Select An Author</option>
                                </select>
                                <label asp-for="AuthorId"></label>                                
                            </div>
                            <span asp-validation-for="@Model.AuthorId" class="text-danger d-block"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="mb-5">
                                <select class="form-select form-select-solid js-select2" data-placeholder="Select Categories" asp-for="SelectedCategories" asp-items="@Model.Categories">
                                    <option value="">Select Categories</option>
                                </select>                                
                            </div>                            
                            <span asp-validation-for="@Model.SelectedCategories" class="text-danger d-block"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <!--begin::Input group-->
                            <div class="form-floating mb-5">
                                <input type="text" class="form-control form-control-solid" placeholder="Publisher" asp-for="Publisher" />
                                <label asp-for="Publisher"></label>                                
                            </div>                            
                            <span asp-validation-for="@Model.Publisher" class="text-danger d-block"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col py-4">
                            <div class="form-check form-switch form-check-custom form-check-solid form-switch-solid mb-5">
                                <input class="form-check-input" type="checkbox" id="flexCheckboxLg" asp-for="IsAvaliableForRental" />
                                <label class="form-check-label" for="flexCheckboxLg">
                                    Is Available For Rent
                                </label>                                
                            </div>      
                            <span asp-validation-for="@Model.IsAvaliableForRental" class="text-danger d-block"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <!--begin::Input group-->
                            <div class="form-floating mb-5">
                                <input type="text" class="form-control form-control-solid js-datepicker" placeholder="Publishing Date" asp-for="PublishingDate" />
                                <label asp-for="PublishingDate"></label>                                
                            </div>                            
                            <span asp-validation-for="@Model.PublishingDate" class="text-danger d-block"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <!--begin::Input group-->
                            <div class="form-floating mb-5">
                                <input type="text" class="form-control form-control-solid" placeholder="Hall" asp-for="Hall" />
                                <label asp-for="Hall"></label>                                
                            </div>                            
                            <span asp-validation-for="@Model.Hall" class="text-danger d-block"></span>
                        </div>
                    </div>                    
                </div>                
                <div class="col-md-7">
                    <div class="row">
                        <div class="col px-2 me-5">
                            <div class="form-floating mb-5">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control js-tinymce" data-kt-autosize="true" style="height:150px;">
                            Write Book Describtion.......
                        </textarea>                                
                            </div>                            
                            <span asp-validation-for="@Model.Description" class="text-danger d-block"></span>
                        </div>
                    </div>
                </div>

            </div>
        </form>
        <div class="card-footer book-footer">
            <button type="submit" class="btn btn-primary mb-5" form="Form">
                <span class="indicator-label">
                    Save
                </span>
                <span class="indicator-progress">
                    Please wait... <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                </span>
            </button>
            <a class="btn btn-light text-danger mb-5 mx-4" asp-action="Index">Cancel</a>
        </div>
    </div>

</div>


@section Scripts{
    <script src="~/assets/plugins/tinymce/tinymce.bundle.js"></script>
    <partial name="_ValidationScriptsPartial" />

}
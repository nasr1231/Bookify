@model BookViewModel
@{
    ViewData["Title"] = Model.Title;
}
<div id="kt_app_content_container" class="app-container container-xxl ">

    <!--begin::Navbar-->
    <div class="card mb-5 mb-xl-10">
        <div class="card-body pt-9 pb-0">
            <!--begin::Details-->
            <div class="d-flex flex-wrap flex-sm-nowrap">
                <!--begin: Pic-->
                <div class="me-7 mb-4">
                    <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                        <a data-fslightbox href="@Model.ImageUrl">
                            <img src="@Model.ImageUrl" class="w-150px" alt="@Model.Title"> 
                        </a>
                    </div>
                </div>
                <!--end::Pic-->
                <!--begin::Info-->
                <div class="flex-grow-1">
                    <!--begin::Title-->
                    <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                        <!--begin::User-->
                        <div class="d-flex flex-column">
                            <!--begin::Name-->
                            <div class="d-flex align-items-center mb-2">
                                <span class="text-gray-900 fs-2 fw-bold me-1">@Model.Title</span>
                                <span class="badge badge-light-@(Model.IsDeleted ? "danger" : Model.IsAvaliableForRental ? "success" : "warning") me-auto">
                                    @(Model.IsDeleted ? "Deleted" : Model.IsAvaliableForRental ? "Avaliable For Rental" : "Not Avaliable For Rental")
                                </span>
                            </div>
                            <!--end::Name-->
                            <!--begin::Info-->
                            <div class="d-flex flex-wrap fw-semibold fs-5 text-gray-400 mb-1 pe-2">
                                By:
                                <span class="ms-2 text-primary">
                                    @Model.Author
                                </span>
                            </div>
                            <div class="d-flex flex-wrap fw-semibold fs-6 text-gray-400 mb-4 pe-2">                                                                
                                @Model.Publisher                                
                            </div>
                            <!--end::Info-->
                        </div>
                        <!--end::User-->
                        <!--begin::Actions-->
                        <div class="d-flex my-4">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary me-3">Edit</a>
                        </div>
                        <!--end::Actions-->
                    </div>
                    <!--end::Title-->
                    <div class="d-flex flex-wrap flex-stack">
                        <div class="d-flex flex-column flex-grow-1 pe-8">
                            <div class="d-flex flex-wrap">

                                <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">  
                                    
                                    <div class="d-flex align-items-center me-2">
                                        <span class="svg-icon svg-icon-3 svg-icon-primary me-5">
                                            <i class="ki-duotone ki-calendar fs-5">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                            </i>
                                        </span>
                                        <div class="fs-7 fw-bold ">@Model.PublishingDate.ToString("dd MMM, yyyy")</div>
                                    </div>
                                    <div class="fw-semibold fs-6 text-gray-500">Publishing Date</div>
                                    <!--end::Label-->
                                </div>

                                <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                                    <!--begin::Number-->
                                    <div class="d-flex fs-7 fw-bold align-items-center">
                                        @Model.CreatedOn.ToString("dd MMM, yyyy")
                                    </div>
                                    <div class="fw-semibold fs-6 text-gray-500">Added Date</div>
                                </div>

                                 <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                                    <div class="d-flex fs-7 fw-bold align-items-center">
                                        <div class="fs-7 fw-bold counted" data-kt-countup-value="7">7</div>
                                    </div>
                                    <div class="fw-semibold fs-6 text-gray-500">Copies</div>
                                </div>
                                <div class="align-self-end pb-3">
                                    @foreach (var category in Model.Categories)
                                    {
                                        <span class="badge badge-light-info me-auto">
                                            @category
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Details-->
            <!--begin::Navs-->
            <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bold">
                <!--begin::Nav item-->
                <li class="nav-item mt-2">
                    <a class="nav-link text-active-primary ms-0 me-10 py-5 active" data-bs-toggle="tab" href="#Description">
                        Description
                    </a>
                </li>
                <li class="nav-item mt-2">
                    <a class="nav-link text-active-primary ms-0 me-10 py-5" data-bs-toggle="tab" href="#Copies">
                        Copies
                    </a>
                </li>                           
            </ul>
            <!--begin::Navs-->
        </div>
    </div>

    <div class="tab-content">
        <div class="card tab-pane fade show active" id="Description">
            <div class="card-header">
                <div class="card-title m-0">
                    <h3 class="fw-bold m-0">Description</h3>
                </div>
            </div>
            <div class="card-body py-10 ps-12">
                <div class="w-100">
                    @Html.Raw(Model.Description)
                </div>
            </div>
        </div>

        <div class="card tab-pane fade" id="Copies">
            <div class="card-header">
                <div class="card-title m-0">
                    <h3 class="fw-bold m-0">Copies</h3>
                </div>
            </div>
            <div class="card-body">
                Nasssssor
            </div>
        </div>
    </div> 
</div>

@section Plugins{
<script src="~/assets/plugins/fslightbox/fslightbox.bundle.js"></script>
}
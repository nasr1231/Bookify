@model AuthorViewModel

<tr class="fs-5 text-left">
    <td>@Model.Name</td>
    <td class="fw-bolder">
        <span class="badge badge-light-@(Model.IsDeleted ? "danger" : "success") js-status">
            @(@Model.IsDeleted ? "Deleted" : "Available")
        </span>
    </td>
    <td>@Model.CreatedOn</td>
    <td>@Model.LastUpdatedOn</td>
    <td style="padding: 15px 0px;">
        <div class="card-toolbar">
            <!--begin::Menu-->
            <button type="button" class="btn btn-color-dark btn-secondary text-center" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                <span class="svg-icon svg-icon-2 me-0">
                    Action
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-down-short" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v5.793l2.146-2.147a.5.5 0 0 1 .708.708l-3 3a.5.5 0 0 1-.708 0l-3-3a.5.5 0 1 1 .708-.708L7.5 10.293V4.5A.5.5 0 0 1 8 4z" />
                    </svg>
                </span>
            </button>
            <!--begin::Menu 3-->
            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px py-3" data-kt-menu="true">
                <!--begin::Menu Preview item-->
                <div class="menu-item px-3">
                    <a href="javascript:;"
                       class="menu-link flex-stack px-3 js-render-modal js-preview-model"
                       data-url="/Authors/Preview/@Model.Id"
                       data-title="Preview Author">
                        Preview
                    </a>
                </div>
                <!--end::Menu item-->
                <!--begin::Menu Edit item-->
                <div class="menu-item px-3">
                    <a href="javascript:;"
                       class="menu-link flex-stack px-3 js-render-modal"
                       data-url="/Authors/Edit/@Model.Id"
                       data-title="Edit Author"
                       data-update="true">
                        Edit
                    </a>
                </div>
                <!--end::Menu item-->
                <!--begin::Menu Toggle item-->
                <div class="menu-item px-3">
                    <a href="javascript:;"                       
                       class="menu-link flex-stack px-3 js-toggle-status"
                       data-id="@Model.Id">
                        Change Status
                    </a>
                </div>
                <!--end::Menu item-->
            </div>
        </div>
    </td>
</tr>
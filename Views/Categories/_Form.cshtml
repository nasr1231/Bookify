@model CategoryFormViewModel
@{
    ViewData["Title"] = $"{(Model?.CategoryId > 0 ? "Edit" : "Add")} Category";
}

<form asp-action="@(Model?.CategoryId > 0 ? "Edit" : "Add")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="OnModalBegin"
      data-ajax-success="OnModalSuccess"
      data-ajax-failure="ShowErrorMessage"
      data-ajax-complete="OnModalComplete">
    @if (Model?.CategoryId > 0)
    {
        <input type="hidden" asp-for="CategoryId" />
    }
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control" placeholder="Name" asp-for="CategoryName" id="kt_docs_maxlength_threshold" />
            <label asp-for="CategoryName"></label>            
        </div>
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>
    <partial name="_ModalFooter" />
</form>

